{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@models/*": ["api/models/*"],
      "@controllers/*": ["api/controllers/*"],
      "@routes/*": ["api/routes/*"]
    },
      "typeRoots": ["@types", "./node_modules/@types"]
  },
  "lib": ["es2015"],
  "exclude": ["node_modules", "types"]
}
